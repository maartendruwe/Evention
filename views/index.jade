extends layout

block content
    h1= title
    p Welcome to our test
    p
        button#btnLogout Logout

    // Wrapper
    #wrapper

        // USER INFO
        #userInfo
            h2 User Info
            p
                strong Name:
                |  <span id='userInfoName'></span>
                br
                strong Email:
                |  <span id='userInfoEmail'></span>
                br
                strong Provider:
                |  <span id='userInfoProvider'></span>
        // /USER INFO

        // USER LIST
        h2 User List
        #userList
            table
                thead
                    th UserName
                    th Email
                    th Delete?
                tbody
        // /USER LIST


        // ADD USER
        h2 Add User
        #addUser
            fieldset
                input#inputUserName(type='text', placeholder='Name')
                input#inputUserEmail(type='text', placeholder='Email')
                br
                input#inputUserId(type='text', placeholder='ID')
                input#inputUserAdmin(type='text', placeholder='Admin')
                br
                button#btnAddUser Add User
        // /ADD USER

    // /WRAPPER
